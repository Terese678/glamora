{
  "name": "glamora-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "npm run test:clean",
    "test:clean": "rimraf node_modules/.vitest && vitest run",
    "test:report": "rimraf node_modules/.vitest && vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^2.3.2",
    "@stacks/transactions": "^6.12.0",
    "chokidar-cli": "^3.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest-environment-clarinet": "^2.0.0"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "vitest": "^2.1.9"
  }
}
